<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://jakarta.apache.org/xml/ns/jakartaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://jakarta.apache.org/xml/ns/jakartaee 
                             http://jakarta.apache.org/xml/ns/jakartaee/web-app_5_0.xsd" 
         version="5.0">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.example.HomeServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
</web-app>